<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trainer"
    tools:context=".CustomerWeightTrainer.Customer_View_WeightTrainerList">


    <HorizontalScrollView
        android:id="@+id/horizontalMenuBar"
        android:layout_width="408dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ntr_logo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menu_tab1"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#04574F"
                android:text="@string/ntr_tab1"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/menu_tab2"
                android:layout_width="136dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="#009688"
                android:text="@string/ntr_tab2"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/menu_tab3"
                android:layout_width="136dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="#04574F"
                android:text="@string/ntr_tab3"
                android:textColor="@color/white"
                android:textColorHint="#050505"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/ntr_logo"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:contentDescription="@string/image_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/relativeLayoutSearchName"
        android:layout_width="190dp"
        android:layout_height="29dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalMenuBar">

        <TextView
            android:id="@+id/search_name"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:background="@color/Tab_color"
            android:hint="   NAME"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

        <SearchView
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/Tab_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutSearchLocation"
        android:layout_width="189dp"
        android:layout_height="29dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/relativeLayoutSearchName"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/search_location"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:background="@color/Tab_color"
            android:hint="  LOCATION"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

        <SearchView
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/Tab_color"
            android:gravity="right" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_CvWightTrainer"
        android:layout_width="406dp"
        android:layout_height="514dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutSearchName"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/btn_wtCV_Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Menu"
        android:textColor="@color/black"
        app:backgroundTint="@color/lite_grean"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>