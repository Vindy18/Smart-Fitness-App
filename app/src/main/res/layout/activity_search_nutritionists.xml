<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ntr3"
    tools:context=".Search_nutritionists">

    <RelativeLayout
        android:id="@+id/relativeLayoutPerson1"
        android:layout_width="300dp"
        android:layout_height="146dp"
        android:background="@drawable/card1"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayoutPerson2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/ntr_phone1"
            android:layout_width="181dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="90dp"
            android:text="@string/ntr_phone"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ntr_name1"
            android:layout_width="181dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="@string/ntr_name"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/person_image1"
            android:layout_width="67dp"
            android:layout_height="83dp"
            android:contentDescription="@string/person_image"
            app:srcCompat="@drawable/person" />

        <TextView
            android:id="@+id/ntr_location1"
            android:layout_width="181dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="55dp"
            android:text="@string/ntr_district"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutPerson2"
        android:layout_width="300dp"
        android:layout_height="146dp"
        android:background="@drawable/card1"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayoutPerson3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/ntr_name2"
            android:layout_width="181dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="@string/ntr_name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ntr_location2"
            android:layout_width="181dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="55dp"
            android:text="@string/ntr_district"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ntr_phone2"
            android:layout_width="181dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="90dp"
            android:text="@string/ntr_phone"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/person_image2"
            android:layout_width="67dp"
            android:layout_height="83dp"
            android:contentDescription="@string/person_image"
            app:srcCompat="@drawable/person" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutPerson3"
        android:layout_width="300dp"
        android:layout_height="146dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/card1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/ntr_name3"
            android:layout_width="181dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="@string/ntr_name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ntr_location3"
            android:layout_width="181dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="55dp"
            android:text="@string/ntr_district"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ntr_phone3"
            android:layout_width="181dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="90dp"
            android:text="@string/ntr_phone"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/person_image3"
            android:layout_width="67dp"
            android:layout_height="83dp"
            android:contentDescription="@string/person_image"
            app:srcCompat="@drawable/person" />
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalMenuBar"
        android:layout_width="408dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ntr_logo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ntr_menu_tab1"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#04574F"
                android:text="@string/ntr_tab1"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ntr_menu_tab2"
                android:layout_width="136dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="#04574F"
                android:text="@string/ntr_tab2"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ntr_menu_tab3"
                android:layout_width="136dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:text="@string/ntr_tab3"
                android:textColor="@color/black"
                android:textColorHint="#050505"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/ntr_logo"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:contentDescription="@string/image_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/relativeLayoutSearchName"
        android:layout_width="190dp"
        android:layout_height="29dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayoutPerson1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalMenuBar">

        <TextView
            android:id="@+id/search_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/Tab_color"
            android:text="@string/search_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

        <SearchView
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/Tab_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutSearchLocation"
        android:layout_width="189dp"
        android:layout_height="29dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayoutPerson1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalMenuBar">

        <TextView
            android:id="@+id/search_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Tab_color"
            android:text="@string/search_location"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

        <SearchView
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/Tab_color"
            android:gravity="right" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>